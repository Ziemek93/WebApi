<hr />
<div class=" container">
    <div class="row">
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Documents.NumerKlienta)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Documents.NumerKlienta)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Documents.DataDokumentu)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Documents.DataDokumentu)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Documents.Nazwa)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Documents.Nazwa)
                </dd>
            </dl>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Documents.Id">Edit</a>
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Utworzył<!--@Html.DisplayNameFor(model => model.DocumentInfo[0].NazwaArtykulu)-->
                        </th>
                        <th>
                            Cena Netto <!--@Html.DisplayNameFor(model => model.DocumentInfo[0].Ilosc)-->
