                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.Documents.IdFkuNavigation.Login)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.nettoDokument)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.bruttoDokument)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa Artykułu<!--@Html.DisplayNameFor(model => model.DocumentInfo[0].NazwaArtykulu)-->
            </th>
            <th>
                Ilość <!--@Html.DisplayNameFor(model => model.DocumentInfo[0].Ilosc)-->
            </th>
            <th>
                Cena Brutto <!--@Html.DisplayNameFor(model => model.DocumentInfo[0].CenaBrutto)-->
            </th>
            <th>
                Cena Netto  <!-- @Html.DisplayNameFor(model => model.DocumentInfo[0].CenaNetto)-->
            </th>
            <th>
                Id dokumentu  <!-- @Html.DisplayNameFor(model => model.DocumentInfo[0].IdFkd)-->
            </th>
            <th>
                Id produktu <!--@Html.DisplayNameFor(model => model.DocumentInfo[0].IdFkt)-->
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DocumentInfo.FirstOrNull() != null)
        {
            foreach (var item in Model.DocumentInfo)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NazwaArtykulu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ilosc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CenaBrutto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CenaNetto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdFkd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdFkt)
                    </td>
                    <td>
                        <a asp-page-handler="Remove" asp-route-id="@item.Id">Delete</a>
                        @*<input asp-page-handler="Add" type="submit" value="Ok" class="btn btn-default" name="sub2" />*@
                    </td>
                </tr>

            }
        }
    </tbody>
</table>
